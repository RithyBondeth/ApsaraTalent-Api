# ==============================================
# APSARA TALENT PLATFORM - ENVIRONMENT TEMPLATE
# ==============================================

# Node Environment
NODE_ENV=development

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
DATABASE_SYNCHRONIZE=false

# ==============================================
# JWT CONFIGURATION
# ==============================================
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES=1d
JWT_REFRESH_EXPIRES=7d
JWT_EMAIL_EXPIRES=24h

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=Your App Name <noreply@yourdomain.com>

# ==============================================
# RATE LIMITING / THROTTLER
# ==============================================
THROTTLE_TTL=60
THROTTLE_LIMIT=5

# ==============================================
# SMS SERVICES
# ==============================================
# Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# PlasGate SMS
PLAS_GATE_API_URL=https://cloudapi.plasgate.com/rest/send
PLAS_GATE_SECRET_KEY=your_plasgate_secret_key
PLAS_GATE_PRIVATE_KEY=your_plasgate_private_key
PLAS_GATE_SMS_SENDER=SMS Info

# ==============================================
# MICROSERVICES CONFIGURATION
# ==============================================
API_GATEWAY_PORT=3000

AUTH_SERVICE_PORT=3001
AUTH_SERVICE_HOST=localhost

USER_SERVICE_PORT=3002
USER_SERVICE_HOST=localhost

RESUME_SERVICE_PORT=3003
RESUME_SERVICE_HOST=localhost

CHAT_SERVICE_PORT=3004
CHAT_SERVICE_HOST=localhost

JOB_SERVICE_PORT=3005
JOB_SERVICE_HOST=localhost

PAYMENT_SERVICE_PORT=3006
PAYMENT_SERVICE_HOST=localhost

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_WEBSOCKET_HOST=localhost
REDIS_WEBSOCKET_PORT=6379

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================
FRONTEND_ORIGIN=http://localhost:4000

# ==============================================
# SOCIAL AUTHENTICATION
# ==============================================
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/social/google/callback

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_CALLBACK_URL=http://localhost:3000/social/linkedin/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:3000/social/github/callback

# Facebook OAuth
FACEBOOK_CLIENT_ID=your_facebook_client_id
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret
FACEBOOK_CALLBACK_URL=http://localhost:3000/social/facebook/callback

# ==============================================
# BASE URL
# ==============================================
BASE_URL=http://localhost:3000/

# ==============================================
# OPENAI CONFIGURATION
# ==============================================
OPENAI_API_KEY=your_openai_api_key_here

# ==============================================
# BAKONG KHQR PAYMENT SERVICE
# ==============================================
# Required - Get from NBC Cambodia Developer Portal
BAKONG_DEVELOPER_TOKEN=your_bakong_developer_token_here

# API Configuration
BAKONG_API_BASE_URL=https://api-bakong.nbc.gov.kh
BAKONG_API_TIMEOUT=30000

# Rate Limiting Configuration
BAKONG_RATE_LIMIT_REQUESTS=100
BAKONG_RATE_LIMIT_WINDOW_MS=60000

# QR Code Image Settings
BAKONG_QR_IMAGE_DEFAULT_WIDTH=300
BAKONG_QR_IMAGE_MAX_WIDTH=1000

# Payment Expiration Settings
BAKONG_QR_EXPIRATION_MAX_MINUTES=10080

# Bulk Payment Settings
BAKONG_BULK_PAYMENT_MAX_HASHES=50